                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star-o"></i>
                    </div>
                    <p><%= hanghoa[i].Gia %></p>
                    <a href="javascript:void(0)" class="btnb btn-buy-now" role="button">Add Cart </a>

                </div>
            </div>
        <%} %>
    </div>
